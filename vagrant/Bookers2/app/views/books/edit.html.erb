
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if @book.errors.any? %>
				<div id="error_explanation" class="alert alert-danger">
					<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<div class="field">
					<label class="control-label" for="updateTitle">Title</label>
					<%= f.text_field :book_title,  class:"form-control", id:"updateTitle" %>
				</div>

				<div class="field">
						<label class="control-label" for="updateOpinion">Opinion</label>
						<%= f.text_area :book_body, class:"form-control", id:"updateOpinion" %>
				</div>

				<div class="actions-update">
					<%= f.submit "Update Book", class:"btn btn-primary" %>
				</div>

			<% end %>

			<div class="links">
				<%= link_to 'Show', book_path(@book.id), class:"show_#{@book.id}" %>
				<span>|</span>
				<%= link_to 'back', books_path, class:"back" %>
			</div>
		</div>
	</div>
</div>