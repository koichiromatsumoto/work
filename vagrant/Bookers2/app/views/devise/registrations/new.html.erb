
<div class="container">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <label class="control-label" for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, class:"name", id:"inputName" %>
    </div>

    <div class="form-group">
      <label class="control-label" for="inputEmail">Email</label>
      <%= f.email_field :email, class:"email", id:"inputEmail" %>
    </div>

    <div class="form-group">
     <label class="control-label" for="inputPassword">Password(6 characters minimum)</label>
      <%= f.password_field :password, autocomplete: "off", class:"password", id:"inputPassword" %>
    </div>

    <div class="form-group">
     <label class="control-label" for="inputConfirmPassword">Password confirmation</label>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"password_confirm", id:"inputConfirmPassword" %>
    </div>

    <%= f.submit "Sign up", class:"btn btn-success" %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
