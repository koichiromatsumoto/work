<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="">Bookers</a>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample">
            <ul class="nav navbar-nav navbar-right">
<!-- ※※あとでaタグからlink_toにかえる！！※※ -->

                <li><%= link_to "Home", root_path ,class:"glyphicon glyphicon-home" %></li>
                <% if user_signed_in? %>
                  <li><%= link_to "Users", users_path ,class:"glyphicon glyphicon-user" %></li>
                  <li><%= link_to "Books", books_path ,class:"glyphicon glyphicon-book" %></li>
                  <li><%= link_to "logout", destroy_user_session_path, method: :delete ,class:"glyphicon glyphicon-log-out" %></li>
                <% else %>
                  <li><a href=""><span class="glyphicon glyphicon-link"></span>  About  </a></li>
                  <li><a href=""><span class="glyphicon glyphicon-edit"></span>  sign up  </a></li>
                  <li><a href=""><span class="glyphicon glyphicon-log-in"></span>  login  </a></li>
                <% end %>

<!-- ※※ここまで※※ -->
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
