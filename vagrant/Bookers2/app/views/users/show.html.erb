

<div class="body">
	<div class="container">
		<div class="row">

			
<!-- 左サイドバー部分 -->
<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
			<div class="row">
				<div class="col-xs-12">
					<div class="update-btn">
						<%= link_to edit_user_path(current_user.id), class:"edit_user_#{current_user.id}" do %><div class="btn btn-default glyphicon glyphicon-wrench"></div><% end %>
			        </div>
			    </div>
			</div>
				<h2>New book</h2>
				<%= form_for(@book, url:books_path) do |f| %>
						<% if @book.errors.any? %>
		                <div id="error_explanation">
		                  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
		                  <ul>
		                  <% @book.errors.full_messages.each do |message| %>
		                    <li><%= message %></li>
		                  <% end %>
		                  </ul>
		                </div>
	            <% end %>
					<div class="field">
						<label class="control-label" for="inputTitle">Title</label>
						<%= f.text_field :book_title,  class:"book_title", id:"inputTitle" %>
					</div>

					<div class="field">
						<label class="control-label" for="inputOpinion">Opinion</label>
						<%= f.text_area :book_body, class:"book_body", id:"inputOpinion" %>
					</div>

					<div class="actions">
						<%= f.submit class:"btn btn-primary" %>
					</div>
				<% end %>
			</div>
			

			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= link_to user_path(book.user_id),class:"user_#{book.user_id}" do %><%= attachment_image_tag @user, :profile_image, size:'60x60', format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
							<td><%= link_to book.book_title, book_path(book.id),class:"book_#{book.id}" %></td>
							<td><%= book.book_body %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>

		</div>
	</div>
</div>