
<!-- 左サイドバー部分 -->
<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
			<div class="row">
				<div class="col-xs-12">
					<div class="update-btn">
						<%= link_to edit_user_path(current_user.id), class:"edit_user_#{current_user.id}" do %><div class="btn btn-default glyphicon glyphicon-wrench"></div><% end %>
			        </div>
			    </div>
			</div>
				<h2>New book</h2>
				<%= form_for(@book, url:books_path) do |f| %>
						<% if @book.errors.any? %>
		                <div id="error_explanation">
		                  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
		                  <ul>
		                  <% @book.errors.full_messages.each do |message| %>
		                    <li><%= message %></li>
		                  <% end %>
		                  </ul>
		                </div>
	            <% end %>
					<div class="field">
						<label class="control-label" for="inputTitle">Title</label>
						<%= f.text_field :book_title,  class:"book_title", id:"inputTitle" %>
					</div>

					<div class="field">
						<label class="control-label" for="inputOpinion">Opinion</label>
						<%= f.text_area :book_body, class:"book_body", id:"inputOpinion" %>
					</div>

					<div class="actions">
						<%= f.submit class:"btn btn-primary" %>
					</div>
				<% end %>
			</div>