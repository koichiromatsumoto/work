

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= link_to 'Show', post_path(post.id), class:"show_#{post.id}" %></td>
			<td><%= link_to 'Edit', edit_post_path(post.id), class:"edit_#{post.id}" %></td>
			<td><%= link_to 'Destroy', post_path(post.id), method: :delete, class:"destroy_#{post.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="new">
<h2>New book</h2>
    <%= form_for(@post) do |f| %>
        <div class="field">
			<p class="post">Title</p>
			<%= f.text_field :title, class:"book_title" %>
    	</div>
    	<div class="field">
			<p class="post">Body</p>
			<%= f.text_area :body, class:"book_body" %>
		</div>
		<div class="action">
			<%= f.submit 'Create Book' %>
		</div>
	<% end %>
</div>


