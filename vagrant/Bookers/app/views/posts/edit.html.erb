<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
    <div class="field">
		<p class="post">Title</p>
		<%= f.text_field :title, class:"book_title" %>
    </div>
	<div class="field">
		<p class="post">Body</p>
		<%= f.text_area :body, class:"book_body" %>
	</div>
	<div class="action">
	    <%= f.submit 'Update Book' %>
    </div>
<% end %>

<div class="links">
	<%= link_to 'Show', post_path(@post), class:"show_#{@post.id}" %>
	<span>|</span>
	<%= link_to 'back', posts_path(@post), class:"back" %>
</div>
